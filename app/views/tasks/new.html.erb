<div class="container">

  <div class="d-flex justify-content-between align-items-center">
    <h1>create task</h1>
    <%= link_to "↩️", tasks_path, class: 'btn btn-light' %>
  </div>

  <% if @task.errors.any? %>
    <% @task.errors.full_messages.each do |message| %>
      <p class='text-danger'><%= message %></p>
    <% end %>
  <% end %>

  <%= form_with model: @task do |f| %>
      <div class="mt-3">
      <%= f.label :title %>
      <%= f.text_field :title %>
      </div>
      <div class="mt-3">
      <%= f.label :details %>
      <%= f.text_field :details %>
      </div>
      <div class="mt-3">
      <%= f.submit %>
      </div>
  <% end %>
  </div>
